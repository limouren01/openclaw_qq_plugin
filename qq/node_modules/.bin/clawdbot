#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/test/moltbot-2026.1.24/dist/node_modules:/mnt/d/test/moltbot-2026.1.24/node_modules:/mnt/d/test/node_modules:/mnt/d/node_modules:/mnt/d/test/moltbot-2026.1.24/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/test/moltbot-2026.1.24/dist/node_modules:/mnt/d/test/moltbot-2026.1.24/node_modules:/mnt/d/test/node_modules:/mnt/d/node_modules:/mnt/d/test/moltbot-2026.1.24/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../clawdbot/dist/entry.js" "$@"
else
  exec node  "$basedir/../clawdbot/dist/entry.js" "$@"
fi
